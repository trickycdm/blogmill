{
  "name": "Blogmill",
  "version": "1.0.3",
  "description": "Blogmill",
  "main": "app.js",
  "scripts": {
    "test": "echo tests to be added",
    "start": "nodemon app.js",
    "start:dev": "nodemon app.js",
    "start:uat": "pm2 start -n uat-app app.js",
    "start:live": "pm2 start -n live-app app.js",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "grunt": "grunt watch",
    "debug": "node app.js --inspect --debug-brk=5858",
    "new:theme": "grunt-init .grunt-init/base-site-template --force",
    "new:schema": "grunt-init .grunt-init/new-schema --force",
    "db:init": "INIT_SQL=true node app.js",
    "db:update": "UPDATE_COLUMNS=true node app.js",
    "update:core": "git pull git@bitbucket.org:dogfish/lp-template.git master",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "app-module-path": "2.2.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "chalk": "2.4.2",
    "cookie-parser": "1.4.4",
    "dotenv": "8.1.0",
    "dotenv-safe": "8.1.0",
    "express": "4.17.1",
    "express-handlebars-multi": "0.2.31",
    "express-session": "1.17.0",
    "fs-extra": "8.1.0",
    "handlebars": "4.4.3",
    "jsonwebtoken": "8.5.1",
    "moment": "2.24.0",
    "multer": "1.4.2",
    "mysql": "2.17.1",
    "promise-mysql": "4.1.1",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "slug": "1.1.0",
    "underscore": "1.9.1",
    "uppy": "1.5.2",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/preset-env": "7.6.3",
    "autoprefixer": "9.6.5",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "cssnano": "4.1.10",
    "flow-bin": "0.109.0",
    "grunt": "1.0.4",
    "grunt-babel": "8.0.0",
    "grunt-browserify": "5.3.0",
    "grunt-cli": "1.3.2",
    "grunt-contrib-sass": "1.0.0",
    "grunt-contrib-uglify-es": "git://github.com/gruntjs/grunt-contrib-uglify.git#harmony",
    "grunt-contrib-watch": "1.1.0",
    "grunt-csscomb": "4.0.0",
    "grunt-init": "0.3.2",
    "grunt-postcss": "0.9.0",
    "grunt-sass-globbing": "1.5.1",
    "load-grunt-tasks": "5.1.0",
    "mocha": "6.2.1",
    "nodemon": "1.19.3",
    "pixrem": "5.0.0",
    "pre-commit": "1.2.2",
    "snazzy": "8.0.0",
    "standard": "14.3.1"
  },
  "standard": {
    "globals": [
      "DB",
      "POOL_CONNECTION",
      "ROOT",
      "HBS_HELPERS",
      "CMS_CONFIG",
      "CMS_ROUTES",
      "CMS_SCHEMA",
      "TEMP_FILE_PATH",
      "PUBLIC_UPLOAD_PATH",
      "FIELD_CONTROLLERS",
      "CMS_MENU",
      "SITE_PAGES",
      "M",
      "swal"
    ],
    "env": [
      "browser",
      "node",
      "mocha",
      "jquery"
    ],
    "ignore": [
      "/cms/fields/standard/*",
      "/cms/public/js/*",
      "/test/",
      "/site/themes/materialize/components/*",
      "/site/themes/materialize/public/js/main.min.js",
      "/site/themes/materialize/public/js/bundle.js"
    ]
  }
}
