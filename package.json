{
  "name": "Blogmill",
  "version": "1.0.0",
  "description": "Blogmill",
  "main": "app.js",
  "scripts": {
    "test": "echo tests to be added",
    "start": "nodemon app.js",
    "start:dev": "nodemon app.js",
    "start:uat": "pm2 start -n uat-app app.js",
    "start:live": "pm2 start -n live-app app.js",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "grunt": "grunt watch",
    "debug": "node app.js --inspect --debug-brk=5858",
    "new:theme": "grunt-init .grunt-init/base-site-template --force",
    "new:schema": "grunt-init .grunt-init/new-schema --force",
    "db:init": "INIT_SQL=true node app.js",
    "db:update": "UPDATE_COLUMNS=true node app.js",
    "update:core": "git pull git@bitbucket.org:dogfish/lp-template.git master",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint",
    "test"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "app-module-path": "2.2.0",
    "bcrypt": "3.0.1",
    "body-parser": "1.18.2",
    "chalk": "2.3.0",
    "cookie-parser": "1.4.3",
    "dotenv": "6.0.0",
    "dotenv-safe": "6.0.0",
    "express": "4.16.3",
    "express-handlebars-multi": "0.2.28",
    "express-session": "1.15.6",
    "fs-extra": "7.0.0",
    "handlebars": "4.0.11",
    "jsonwebtoken": "8.1.0",
    "moment": "2.20.1",
    "multer": "1.3.0",
    "mysql": "2.15.0",
    "promise-mysql": "3.2.1",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "slug": "0.9.1",
    "underscore": "1.8.3",
    "uppy": "0.23.2",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "cssnano": "3.10.0",
    "flow-bin": "0.63.1",
    "grunt": "1.0.3",
    "grunt-babel": "8.0.0",
    "grunt-browserify": "5.2.0",
    "grunt-cli": "1.2.0",
    "grunt-contrib-sass": "1.0.0",
    "grunt-contrib-uglify-es": "git://github.com/gruntjs/grunt-contrib-uglify.git#harmony",
    "grunt-contrib-watch": "1.1.0",
    "grunt-csscomb": "3.1.1",
    "grunt-init": "0.3.2",
    "grunt-postcss": "0.9.0",
    "grunt-sass-globbing": "1.5.1",
    "load-grunt-tasks": "4.0.0",
    "mocha": "^4.1.0",
    "nodemon": "1.14.10",
    "pre-commit": "1.2.2",
    "snazzy": "7.0.0",
    "standard": "12.0.1"
  },
  "standard": {
    "globals": [
      "_db",
      "_root",
      "_helpers",
      "_cmsPages",
      "CMS_CONFIG",
      "CMS_ROUTES",
      "CMS_SCHEMA",
      "TEMP_FILE_PATH",
      "PUBLIC_UPLOAD_PATH",
      "FIELD_CONTROLLERS",
      "swal",
      "CMS_MENU",
      "_sitePages",
      "M"
    ],
    "env": [
      "browser",
      "node",
      "mocha",
      "jquery"
    ],
    "ignore": [
      "/cms/fields/standard/*",
      "/cms/public/js/*",
      "/test/",
      "/site/themes/bootstrap/components/*",
      "/site/themes/materialize/components/*",
      "/site/themes/bootstrap/public/js/main.js",
      "/site/themes/materialize/public/js/main.js"
    ]
  }
}
